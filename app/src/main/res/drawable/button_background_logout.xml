<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#B71C1C"/> <!-- Darker red when pressed -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#D32F2F"/> <!-- Normal red -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#2E7D32"/> <!-- Darker green when pressed -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#388E3C"/> <!-- Normal green -->
            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>
